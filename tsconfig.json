{
    "extends": "@augu/tsconfig",
    "compilerOptions": {
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "bun"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext"
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.spec.ts"]
}
